<?xml version="1.0" encoding="utf-8"?>
<robot name="lenny">
    <!-- Add the robot -->
    <robot file="sda10f.robot.xml"/>

    <!-- Add the left gripper -->
    <kinbody file="robotiq_c2.robot.xml">
        <!-- We need to do forward declaration for: robotiq_85_base_link and robotiq_85_base_joint-->
        <body name="robotiq_85_base_link">
            <offsetfrom>arm_left_link_7_t</offsetfrom>
            <rotationaxis>1 0 0 -90</rotationaxis>
            <translation>0 0 -0.01846</translation>
        </body>
        <joint name="robotiq_85_base_joint" type="hinge" enable="false">
            <body>arm_left_link_7_t</body>
            <body>robotiq_85_base_link</body>
            <limits>0 0</limits>
        </joint>
    </kinbody>

    <!-- Add the right gripper -->
    <kinbody file="robotiq_c2b.robot.xml">
        <!-- We need to do forward declaration for: robotiq_c2_base_link and robotiq_c2_base_joint-->
        <body name="robotiq_c2_base_link">
            <offsetfrom>arm_right_link_7_t</offsetfrom>
            <rotationaxis>1 0 0 -90</rotationaxis>
            <rotationaxis>0 0 1 180</rotationaxis>
            <translation>0 0 -0.01846</translation>
        </body>
        <joint name="robotiq_c2_base_joint" type="hinge" enable="false">
            <body>arm_right_link_7_t</body>
            <body>robotiq_c2_base_link</body>
            <limits>0 0</limits>
        </joint>
    </kinbody>
</robot>
